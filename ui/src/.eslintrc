{
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "import/extensions": [ "error", "always", { "ignorePackages": true } ],
    "react/prop-types": "off",
    "react/jsx-no-bind": ["error",{
      "ignoreDOMComponents": true,
      "ignoreRefs": true,
      "allowArrowFunctions": true,
      "allowFunctions": true,
      "allowBind": true
    }]
  }
}
